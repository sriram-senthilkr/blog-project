<%- include("partials/header") %>

    <h1>Home!</h1>

    <p><%= startingContent %></p>

    <% posts.forEach(function(post) { %>
        <h1> <%= post.title %> </h1>
        <% var truncatedString = post.content.substring(0, 150); %>
        <p> <%= truncatedString + "..." %>
            <a href="/posts/<%=post.title%>">Read More</a>
        </p>

    <% }); %>



